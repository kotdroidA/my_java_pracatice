<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp">

            <TextView
                android:id="@+id/tv_your_feed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Your feed"
                android:textSize="24sp"
                android:textStyle="normal" />
        </Toolbar>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:orientation="horizontal"
            android:padding="16dp"
            android:id="@+id/llHeader"
            >

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_download" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:text="Fiona added you to the Hermes bikini sandal shopping chat." />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23 min ago" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_more" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llHeader"
            android:layout_margin="20dp"
            android:id="@+id/tv_question"
            android:text="what do you guys think about these shoes?I'm thinking of getting them."

            />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_below="@+id/tv_question"
            android:layout_height="wrap_content"
            android:id="@+id/flUsers"
            android:layout_marginStart="16dp"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_user"

                />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_user"
                android:layout_marginStart="25dp"
                />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_user"
                android:layout_marginStart="50dp"
                />


        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/flUsers"
            android:layout_marginStart="10dp"
            android:layout_alignBottom="@+id/flUsers"
            android:layout_alignTop="@+id/flUsers"
            android:gravity="center"
            android:id="@+id/tvUserCount"
            android:text="7 joining including julie cho"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/ic_sandal"
            android:layout_margin="20dp"
            android:id="@+id/ivSandal"
            android:layout_below="@+id/tvUserCount"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivSandal"
            android:text="Join chat"
            android:textSize="20sp"
            android:id="@+id/btnJoinChat"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:backgroundTint="#000000"
            android:layout_margin="30dp"
            />



    </RelativeLayout>

</ScrollView>
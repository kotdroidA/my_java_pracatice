<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/ivImage"
        android:src="@drawable/ic_juli"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:textSize="24sp"
        android:id="@+id/tvName"
        app:layout_constraintTop_toTopOf="@id/ivImage"
        app:layout_constraintStart_toEndOf="@id/ivImage"
        android:text="Pushkar Srivastava"
        app:layout_constraintBottom_toTopOf="@+id/tvAccountDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Account Details"
        android:id="@+id/tvAccountDetail"
        app:layout_constraintStart_toStartOf="@id/tvName"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        android:layout_width="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/ivImage"
        android:layout_height="wrap_content"/>

    <ImageView
        android:src="@android:drawable/ic_media_next"
        android:layout_width="wrap_content"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@id/ivImage"
        app:layout_constraintTop_toTopOf="@id/ivImage"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"/>

    <View
        android:background="#70232020"
        android:layout_marginTop="10dp"
        android:id="@+id/view"
        app:layout_constraintTop_toBottomOf="@id/ivImage"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="1dp"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/circle_rounded"
        android:src="@drawable/ic_folder"
        android:id="@+id/ivFolder"
        />
    <TextView
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:textSize="24sp"
        android:id="@+id/ivFolder"
        app:layout_constraintTop_toTopOf="@id/ivFolder"
        app:layout_constraintStart_toEndOf="@id/ivFolder"
        android:text="Pushkar Srivastava"
        app:layout_constraintBottom_toTopOf="@+id/tvAccountDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>